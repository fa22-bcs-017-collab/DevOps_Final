{
  "name": "taskmanager-selenium-tests",
  "version": "1.0.0",
  "description": "Selenium automated tests for Task Manager application",
  "scripts": {
    "test": "mocha tests/selenium/*.test.js --timeout 30000",
    "test:chrome": "BROWSER=chrome mocha tests/selenium/*.test.js --timeout 30000",
    "test:firefox": "BROWSER=firefox mocha tests/selenium/*.test.js --timeout 30000",
    "test:headless": "HEADLESS=true mocha tests/selenium/*.test.js --timeout 30000"
  },
  "dependencies": {
    "selenium-webdriver": "^4.15.0",
    "chromedriver": "^119.0.0",
    "geckodriver": "^4.2.1"
  },
  "devDependencies": {
    "mocha": "^10.2.0",
    "chai": "^4.3.10"
  }
}
